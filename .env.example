# DocuMentor Environment Configuration
# Copy this file to .env and fill in your values

# ============================================
# Application Settings
# ============================================
APP_NAME="DocuMentor"
DEBUG=false

# ============================================
# Server Configuration
# ============================================
HOST=127.0.0.1
PORT=8501

# ============================================
# CORS Configuration
# ============================================
# Comma-separated list of allowed origins
# For development, you can use: http://localhost:3000,http://localhost:8501
# For production, specify your actual domains
CORS_ORIGINS=http://localhost:3000,http://localhost:8501,http://127.0.0.1:8501,http://127.0.0.1:8506

# ============================================
# API Security & Authentication
# ============================================
# Set a strong API key for production (min 16 characters)
# Leave empty to disable authentication (development only)
# API_KEY=your-secure-random-api-key-at-least-16-chars

# Rate Limiting (requests per minute)
# These values control API abuse prevention
# RATE_LIMIT_SEARCH=60
# RATE_LIMIT_UPLOAD=10
# RATE_LIMIT_QUERY=30
# RATE_LIMIT_GENERATION=20

# ============================================
# LLM Provider Configuration
# ============================================
# Default provider: ollama, openai, or gemini
DEFAULT_LLM_PROVIDER=ollama

# Ollama Configuration
OLLAMA_HOST=localhost:11434
OLLAMA_MODEL=gemma2:2b
OLLAMA_TIMEOUT=120

# OpenAI Configuration (optional)
# OPENAI_API_KEY=sk-your-openai-api-key-here

# Google Gemini Configuration (optional)
# GEMINI_API_KEY=your-gemini-api-key-here

# ============================================
# Vector Database Configuration
# ============================================
CHROMA_PERSIST_DIRECTORY=./data/chroma_db
COLLECTION_NAME=documents
EMBEDDING_MODEL=all-MiniLM-L6-v2

# ============================================
# Chunking Configuration
# ============================================
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CHUNKS_PER_DOC=1000

# ============================================
# Caching Configuration
# ============================================
CACHE_DIR=./data/cache
EMBEDDING_CACHE_DIR=./data/cache/embeddings
MAX_CACHE_SIZE=1000
CACHE_TTL=3600

# ============================================
# Performance Configuration
# ============================================
MAX_WORKERS=4
BATCH_SIZE=100
TIMEOUT=30

# ============================================
# File Upload Configuration
# ============================================
UPLOAD_DIR=./data/uploads
MAX_FILE_SIZE=52428800  # 50MB in bytes

# ============================================
# Web Search Configuration (optional)
# ============================================
# Firecrawl API configuration for web search
# FIRECRAWL_API_KEY=your-firecrawl-api-key-here
# FIRECRAWL_API_URL=http://localhost:3002

ENABLE_WEB_SEARCH=true
ENABLE_CODE_GENERATION=true

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO
